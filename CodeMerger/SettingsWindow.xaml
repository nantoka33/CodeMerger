<Window x:Class="CodeMerger.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeMerger"
        mc:Ignorable="d"
        Title="除外ファイル設定" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="ExcludeTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <Button Content="保存して閉じる" Grid.Row="1" HorizontalAlignment="Right" Click="Save_Click" Margin="0,10,0,0"/>
    </Grid>
</Window>
